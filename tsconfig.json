{
  "compilerOptions": {
    "lib": [
      "ES2019"
    ],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": true,
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": [
    "src/"
  ]
}
